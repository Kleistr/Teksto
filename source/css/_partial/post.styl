:root {
    --serif-font-family: 'Noto Serif SC', "Apple Color Emoji", "Segoe UI Emoji", sans-serif;
    --main-color: rgba(0, 0, 0, 0.86);
    --theme-color:#006CFF;
    // --theme-color: #1e88a8;
    // --theme-color: #1067de;       //apple deep blue
    // --theme-color: #2b9bff;       //apple light blue
    // --theme-color: #75409A;      //初号机紫
    // --theme-color: #81CC91;      // 初号机绿
    --dark-background-color: #2f2f2f;
    --dark-front-color: #e5e5e5;
}
