        // }
        .More {
            border-bottom: none;
            font-weight: bold;
            padding: 1em 0;
            text-decoration: none;
            &:hover {
                color: var(--theme-color);
                transition: .3s color;
            }
        }
    }
    .post-meta {
        text-align: center;
        color: gray;
