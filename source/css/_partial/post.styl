    }

}

.post-time,.post-author,.article-tag-list {
    color:gray !important;
    font-size: 13px !important;
}

.post-content hr {
    display: block;
    border: 0;
    margin: 2em  auto 2.8em auto;
}
.post-content hr::before {
    color: rgba(0, 0, 0, 0.2);
    font-size: 1.1em;
    display: block;
    content: "* * *";
    text-align: center;
}

#top{
    width: 30px;
    height: 50px;
    background: rgba(0,0,0,0.3) none repeat scroll 0% 0%;
    position: fixed;
    bottom: 1%;
    right: 2%;
    border-radius: 5px;
    text-align: center;
    cursor: pointer;
    a{
        display: block;
        font-size: 18px;
        line-height: 25px;
        color: #FFF;
        border-radius: 5px;
        // background-color: inherit;
        text-decoration: none;
        transition: .3s  background-color;
        &:hover{
            background-color: var(--theme-color);
            transition: .3s  background-color;
        }
    }
  }

