.archive {
    padding: 0 5%;
    border: 0px #ddd;
    border-style: solid none none none;
    .post-archive {
        list-style: none;
        padding: 0;
        .years {
            border: 1px #ddd;
            border-style: none none solid none;
            padding-bottom: 0.5em;
            .year {
                font-weight: bold;
            }
        }
        .post-item {
            .post-date {
                display: inline-block;
                margin-right: 10px;
            }
            .post-title {
                color: #000000;
                text-decoration: none;
                font-family: var(--font-family);
                font-weight: bold;
                &:hover {
                    color: var(--theme-color);
                    transition: .3s color;
                }
            }
        }
    }
}

