.archive {
    padding: 0 5%;
    border: 0px #ddd;
    border-style: solid none none none;
    .post-archive {
        list-style: none;
        padding: 0;
        .years {
            // border: 1px #ddd;
            // border-style: none none solid none;
            // padding-bottom: 0.5em;
                &:not(:first-child) {
                    margin: 2em 0 0em 0;   
                }
            .year {
                font-weight: bold;
                font-size: 1.5em;
                margin: 0.5em 0;   
            }
        }
        .post-item {
            padding: 0.2em 0.5em;
            font-weight: 500;
            display: flex;
            .post-date {
                display: inline-block;
                margin-right: 10px;
            }
            &:hover {
                cursor: pointer;
                color: var(--theme-color);
                transition: .3s ease-in-out color;
            }
            .post-title {
                &:hover {
                    color:var(--theme-color);
                    transition: .3s ease-in-out color;
                }
                display: block;
                flex: 1;
                text-decoration: none;
                font-family: var(--font-family);
            }
            a:-webkit-any-link {
                color: inherit;
            }
        }
        .post-item{
                border-bottom: dashed 1px;
        }
    }
}

