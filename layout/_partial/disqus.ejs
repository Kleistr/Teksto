<% if ((page.layout == 'post' || page.layout == 'page') && theme.disqus_shortname && theme.comment && (page.comments === true)) { %>
    <div id = 'load-disqus' style="text-align:center;">
        <a id="disqusBtn" onclick="disqus.load();">点击加载 Disqus 评论</a>
    </div>
    <style>
        #load-disqus {
            display: block;
            padding: 1em 0 2em;;
            text-align: center;
            transition: 0.3s all;
        }
        #load-disqus a {
                padding: 14px;
                border: 1px solid rgba(0,0,0,0.1);
                border-radius: 4px;
                transition: 0.3s all;
            }
        #load-disqus a:hover {
            cursor: pointer;
            color: var(--theme-color);
        }
    </style>
<section id="comments">
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = '<%= theme.disqus_shortname %>'; // required: replace example with your forum shortname
        /* * * DON'T EDIT BELOW THIS LINE * * */
        var disqus = {
            load:function disqus () {
                var dsq = document.createElement('script'); 
                dsq.type = 'text/javascript'; 
                dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                $('#load-disqus').remove(); ///加载后移除按钮
            }
        }
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered
            by Disqus.</a></noscript>
</section>
<% } %>

<% if (theme.gitment_owner && theme.gitment_repo &&theme.gitment_oauth && theme.gitment_oauth.client_id && theme.gitment_oauth.client_secret){ %>
<%- partial('post/gitment', {
                key: post.slug,
                title: post.title,
                url: config.url+url_for(post.path)
            }) %>
<% } %>
